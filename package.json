{
  "name": "aws-simple",
  "version": "18.5.1",
  "description": "Production-ready AWS website deployment with minimal configuration.",
  "repository": {
    "type": "git",
    "url": "https://github.com/clebert/aws-simple.git"
  },
  "license": "MIT",
  "author": "Clemens Akens",
  "type": "module",
  "types": "./lib/index.d.ts",
  "bin": {
    "aws-simple": "./lib/index.js"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "ci": "run-p compile:check compile:emit format:check test",
    "compile:check": "tsc",
    "compile:emit": "tsc --project tsconfig.emit.json",
    "postcompile:emit": "chmod +x lib/index.js",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --silent",
    "release": "npm version",
    "postrelease": "git push --follow-tags",
    "start": "node ./lib/index.js"
  },
  "dependencies": {
    "@aws-sdk/client-api-gateway": "^3.507.0",
    "@aws-sdk/client-cloudformation": "^3.507.0",
    "@aws-sdk/client-iam": "^3.507.0",
    "@aws-sdk/client-s3": "^3.507.0",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "get-port": "^7.0.0",
    "lambda-local": "^2.1.2",
    "mime-types": "^2.1.35",
    "mkdirp": "^3.0.1",
    "prompts": "^2.4.2",
    "yargs": "^17.7.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@swc/core": "^1.4.0",
    "@swc/jest": "^0.2.36",
    "@types/aws-lambda": "^8.10.133",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.11.16",
    "@types/prompts": "^2.4.9",
    "@types/yargs": "^17.0.32",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "aws-cdk-lib": "^2.108.0"
  }
}
