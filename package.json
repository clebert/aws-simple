{
  "name": "aws-simple",
  "version": "18.2.0",
  "description": "Production-ready AWS website deployment with minimal configuration.",
  "repository": {
    "type": "git",
    "url": "https://github.com/clebert/aws-simple.git"
  },
  "license": "MIT",
  "author": "Clemens Akens",
  "type": "module",
  "types": "./lib/index.d.ts",
  "bin": {
    "aws-simple": "./lib/index.js"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "ci": "run-p compile:check compile:emit format:check lint test",
    "compile:check": "tsc",
    "compile:emit": "tsc --project tsconfig.emit.json",
    "postcompile:emit": "chmod +x lib/index.js",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "eslint .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --silent",
    "release": "npm version",
    "postrelease": "git push --follow-tags",
    "start": "node ./lib/index.js"
  },
  "dependencies": {
    "@aws-sdk/client-api-gateway": "^3.347.1",
    "@aws-sdk/client-cloudformation": "^3.347.1",
    "@aws-sdk/client-iam": "^3.347.1",
    "@aws-sdk/client-s3": "^3.347.1",
    "chalk": "^5.2.0",
    "chokidar": "^3.5.3",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "get-port": "^7.0.0",
    "lambda-local": "^2.0.3",
    "mime-types": "^2.1.35",
    "mkdirp": "^3.0.1",
    "prompts": "^2.4.2",
    "yargs": "^17.7.2",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@swc/core": "^1.3.62",
    "@swc/jest": "^0.2.26",
    "@types/aws-lambda": "^8.10.116",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^20.2.5",
    "@types/prompts": "^2.4.4",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-markdown": "^3.0.0",
    "jest": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3"
  },
  "peerDependencies": {
    "aws-cdk-lib": "^2.87.0"
  }
}
