{
  "name": "aws-simple",
  "version": "18.2.0",
  "description": "Production-ready AWS website deployment with minimal configuration.",
  "repository": {
    "type": "git",
    "url": "https://github.com/clebert/aws-simple.git"
  },
  "license": "MIT",
  "author": "Clemens Akens",
  "type": "module",
  "types": "./lib/index.d.ts",
  "bin": {
    "aws-simple": "./lib/index.js"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "ci": "run-p compile:check compile:emit format:check lint test",
    "compile:check": "tsc",
    "compile:emit": "tsc --project tsconfig.emit.json",
    "postcompile:emit": "chmod +x lib/index.js",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "eslint .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --silent",
    "release": "npm version",
    "postrelease": "git push --follow-tags",
    "start": "node ./lib/index.js"
  },
  "dependencies": {
    "@aws-sdk/client-api-gateway": "^3.438.0",
    "@aws-sdk/client-cloudformation": "^3.438.0",
    "@aws-sdk/client-iam": "^3.438.0",
    "@aws-sdk/client-s3": "^3.438.0",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "get-port": "^7.0.0",
    "lambda-local": "^2.1.2",
    "mime-types": "^2.1.35",
    "mkdirp": "^3.0.1",
    "prompts": "^2.4.2",
    "yargs": "^17.7.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@swc/core": "^1.3.95",
    "@swc/jest": "^0.2.29",
    "@types/aws-lambda": "^8.10.125",
    "@types/compression": "^1.7.4",
    "@types/express": "^4.17.20",
    "@types/mime-types": "^2.1.3",
    "@types/node": "^20.8.10",
    "@types/prompts": "^2.4.7",
    "@types/yargs": "^17.0.29",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-markdown": "^3.0.1",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "aws-cdk-lib": "^2.87.0"
  }
